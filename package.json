{
  "name": "agristore-backend",
  "version": "2.0.0",
  "description": "AgriStore Nigeria Backend - Filecoin & Base Network Integration for ETHNigeria 2025",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "build": "npm run build && npm run lint && npm run test",
    "deploy": "pm2 start ecosystem.config.js --env production",
    "logs": "pm2 logs agristore-backend",
    "stop": "pm2 stop agristore-backend",
    "restart": "pm2 restart agristore-backend",
    "health-check": "curl -f http://localhost:3001/api/health || exit 1"
  },
  "keywords": [
    "agriculture",
    "filecoin",
    "ipfs",
    "lighthouse",
    "blockchain",
    "base-network",
    "nigeria",
    "farmers",
    "supply-chain",
    "ai-prediction",
    "web3",
    "ethers",
    "hackathon",
    "etnigeria2025"
  ],
  "author": "AgriStore Team - ETHNigeria 2025",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/agristore-backend.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/agristore-backend/issues"
  },
  "homepage": "https://github.com/your-username/agristore-backend#readme",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "@lighthouse-web3/sdk": "^0.4.0",
    "axios": "^1.6.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "ethers": "^6.8.0",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "form-data": "^4.0.0",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "validator": "^13.11.0"
  },
  "devDependencies": {
    "@types/node": "^20.8.10",
    "eslint": "^8.52.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.0.2",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.3",
    "supertest": "^6.3.3"
  },
  "optionalDependencies": {
    "ioredis": "^5.3.2",
    "mongodb": "^6.3.0",
    "mongoose": "^8.0.0",
    "pm2": "^5.3.0",
    "redis": "^4.6.10"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "**/*.js",
      "!node_modules/**",
      "!coverage/**",
      "!uploads/**"
    ],
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/?(*.)+(spec|test).js"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "nodemonConfig": {
    "watch": [
      "server.js",
      "routes/",
      "middleware/",
      "services/",
      "utils/"
    ],
    "ext": "js,json",
    "ignore": [
      "uploads/",
      "node_modules/",
      "*.test.js"
    ],
    "env": {
      "NODE_ENV": "development"
    }
  },
  "standard": {
    "env": [
      "jest"
    ]
  }
}
